{
  "name": "rewritable-pr-comment",
  "version": "0.7.0",
  "description": "Github Action that posts a PR / issue comment that re-writes itself on update",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sammcj/rewritable-pr-comment.git"
  },
  "scripts": {
    "build": "npx @vercel/ncc build -m index.js --license licenses.txt --v8-cache",
    "test": "jest --passWithNoTests",
    "lint": "prettier -w .; eslint --fix"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier -w",
      "eslint --fix"
    ]
  },
  "author": "sammcj",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-deprecation": "1.3.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "@vercel/ncc": "0.36.0"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "@octokit/rest": "19.0.5"
  }
}
